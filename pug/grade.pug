extends layout.pug

block content
    .row
        .col-auto
            h1.content-title
                i.material-icons people
                | Turma
        .col.text-right
            a.btn-success.btn-sm.no-wra(href='#modal-new')
                .material-icons add
                |  Criar nova turma
    article.box
        .box-body
            .table
                table
                    thead
                        tr
                            th Nome
                    tbody
                        tr(v-for='grade in grades')
                            td {{ grade.name }}
                                span.text-muted(v-if='!grade.active')  invisível
                            td.text-right.no-wrap
                                a.btn-warning.btn-sm.tooltip.tooltip-end(:href='"#modal-edit-" + grade.id' title='Editar informações da turma')
                                    .material-icons edit
                                    span.d-none.d-md-inline  Editar
                                a.btn-danger.btn-sm.tooltip.tooltip-end(:href='"#modal-delete-"+grade.id' title='Remover turma')
                                    .material-icons delete
                                    span.d-none.d-md-inline  Remover
    div.modal#modal-new
        .modal-header Nova turma
        .modal-body
            .row.justify-content-center
                .col-sm-11
                    form(action='#' data-resource='grade' data-success='Turma cadastrada com sucesso' data-error='Não foi possível cadastrar a turma' onsubmit='grade_save(event)')
                        input(type='hidden' name='active' value='1')
                        br
                        .row
                            .col-sm-8.input
                                input(required placeholder='Ex.: 1° Ano A' name='name')
                                label Nome
                            .col-sm-4.input
                                input(type='number' required min='1' placeholder='Ex. 1° ano: 1' name='level')
                                label Nível
                                    |
                                    |
                                    .material-icons.tooltip.tooltip-left.tooltip-start(data-tooltip!='1° ano: nível 1;&#xa;2° ano: nível 2;&#xa;3° ano: nível 3;&#xa;etc') info
                        br
                        .row
                            .col-6.col-md-4(v-for='subject in subjects' v-if='subject.active')
                                label
                                    input(type='checkbox' name='grade_subject[]' :value='subject.id')
                                    |  {{ subject.name }}
                        br
                        a.btn-danger(href='#') #[.material-icons close]  Cancelar
                        button.btn-success.pull-right(type='submit') #[.material-icons check]  Salvar
                        br
    a.modal-close(href='#')

    div(v-for='grade in grades')
        div.modal(:id='"modal-edit-" + grade.id')
            .modal-header Editar turma
            .modal-body
                .row.justify-content-center
                    .col-sm-11
                        form(action='#' data-resource='grade' data-success='Turma editada com sucesso' data-error='Não foi possível editar a turma' onsubmit='form_submit(event)')
                            input(type='hidden' name='id' :value='grade.id')
                            br
                            .row
                                .col-sm-8.input
                                    input(required :value='grade.name' placeholder='Ex.: 1° Ano A' name='name')
                                    label Nome
                                .col-sm-4.input
                                    input(type='number' required :value='grade.level' min='1' placeholder='Ex.: 1' name='level')
                                    label Nível
                                        |
                                        |
                                        .material-icons.tooltip.tooltip-left.tooltip-start(data-tooltip!='1° ano: nível 1;&#xa;2° ano: nível 2;&#xa;3° ano: nível 3;&#xa;etc') info
                            .row
                                .col-12.text-center
                                    label
                                        br
                                        input(name='active' value='1' :checked='grade.active' type='checkbox')
                                        | Visível
                            br
                            .row
                                .col-6.col-md-4(v-for='subject in subjects' v-if='grade_subjects.find(grade_subject => grade_subject.grade_id === grade.id && grade_subject.subject_id === subject.id) !== undefined')
                                    .material-icons check
                                    |  {{ subject.name }}
                            br
                            a.btn-danger(href='#') #[.material-icons close]  Cancelar
                            button.btn-success.pull-right(type='submit') #[.material-icons check]  Salvar
                            br
        a.modal-close(href='#')

        div.modal.modal-xs.modal-danger(:id='"modal-delete-" + grade.id')
            .modal-header Remover turma
            .modal-body
                p Tem certeza que deseja remover esta turma?
            .modal-footer
                a.btn-primary.btn-sm(href='#') #[.material-icons close]  Cancelar
                button.btn-danger.btn-sm.pull-right(:onclick='\'delete_resource("grade", \'+grade.id+\')\'') #[.material-icons delete]  Remover
        a.modal-close(href='#')