extends layout.pug

block content
    h1.content-title
        i.material-icons people
        | Turma
        a.btn-success.btn-sm.pull-right(href='#modal-new')
            .material-icons add
            |  Criar nova turma
    article.box
        .box-body
            .table
                table
                    thead
                        tr
                            th Nome
                    tbody
                        tr(v-for='grade in grades')
                            td {{ grade.name }}
                            td.text-right.no-wrap
                                a.btn-danger.btn-sm.tooltip.tooltip-end(:href='"#modal-"+grade.id' title='Esconder turma' v-if='grade.active')
                                    .material-icons visibility_off
                                    span.d-none.d-md-inline  Esconder
                                a.btn-success.btn-sm.tooltip.tooltip-end(:href='"#modal-"+grade.id' title='Mostrar turma' v-if='!grade.active')
                                    .material-icons visibility
                                    span.d-none.d-md-inline  Mostrar
                                a.btn-warning.btn-sm.tooltip.tooltip-end(:href='"#modal-edit-" + grade.id' title='Editar informações da turma')
                                    .material-icons edit
                                    span.d-none.d-md-inline  Editar
                                a.btn-danger.btn-sm.tooltip.tooltip-end(:href='"#modal-delete-"+grade.id' title='Remover turma')
                                    .material-icons delete
                                    span.d-none.d-md-inline  Remover
    div.modal#modal-new
        .modal-header Nova turma
        .modal-body
            .row.justify-content-center
                .col-sm-11
                    form.mark-required
                        br
                        .row
                            .col-sm-8.input
                                input(required placeholder='Ex.: 1° Ano A')
                                label Nome
                            .col-sm-4.input
                                input(type='number' required min='1' placeholder='Ex. 1° ano: 1')
                                label Nível
                                    |
                                    |
                                    .material-icons.tooltip.tooltip-left.tooltip-start(data-tooltip!='1° ano: nível 1;&#xa;2° ano: nível 2;&#xa;3° ano: nível 3;&#xa;etc') info
                        br
                        a.btn-danger(href='#') #[.material-icons close]  Cancelar
                        a.btn-success.pull-right(href='#') #[.material-icons check]  Salvar
                        br
    a.modal-close(href='#')

    div(v-for='grade in grades')
        div.modal.modal-xs(:id='"modal-" + grade.id' :class='grade.active ? "modal-danger" : "modal-success"')
            .modal-header {{ grade.active ? 'Esconder' : 'Mostrar' }} turma
            .modal-body
                p Tem certeza que deseja {{ grade.active ? 'esconder' : 'mostrar' }} esta turma?
            .modal-footer
                a.btn-primary.btn-sm(href='#') #[.material-icons close]  Cancelar
                a.btn-danger.btn-sm.pull-right(href='#' v-if='grade.active') #[.material-icons visibility_off]  Esconder
                a.btn-success.btn-sm.pull-right(href='#' v-if='!grade.active') #[.material-icons visibility]  Mostrar
        a.modal-close(href='#')

        div.modal(:id='"modal-edit-" + grade.id')
            .modal-header Editar turma
            .modal-body
                .row.justify-content-center
                    .col-sm-11
                        form.mark-required
                            br
                            .row
                                .col-sm-8.input
                                    input(required :value='grade.name' placeholder='Ex.: 1° Ano A')
                                    label Nome
                                .col-sm-4.input
                                    input(type='number' required :value='grade.level' min='1' placeholder='Ex.: 1')
                                    label Nível
                                        |
                                        |
                                        .material-icons.tooltip.tooltip-left.tooltip-start(data-tooltip!='1° ano: nível 1;&#xa;2° ano: nível 2;&#xa;3° ano: nível 3;&#xa;etc') info
                            br
                            a.btn-danger(href='#') #[.material-icons close]  Cancelar
                            a.btn-success.pull-right(href='#') #[.material-icons check]  Salvar
                            br
        a.modal-close(href='#')

        div.modal.modal-xs.modal-danger(:id='"modal-delete-" + grade.id')
            .modal-header Remover turma
            .modal-body
                p Tem certeza que deseja remover esta turma?
            .modal-footer
                a.btn-primary.btn-sm(href='#') #[.material-icons close]  Cancelar
                a.btn-danger.btn-sm.pull-right(href='#') #[.material-icons delete]  Remover
        a.modal-close(href='#')